{
  "repository": "git@github.com:sendbird/sendbird-uikit-react-native.git",
  "author": "Airen <airen.kang@sendbird.com>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "sample"
    ],
    "nohoist": [
      "**/react",
      "**/react-dom",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-dev-menu",
      "**/react-native-codegen"
    ]
  },
  "scripts": {
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock",
    "w": "sh -c 'yarn workspace ${0} ${1} ${2} ${3}'",
    "w:create": "npx create-react-native-library",
    "w:clean": "lerna run clean",
    "w:build": "lerna run prepare",
    "w:lint:eslint": "eslint packages/**/src --ext ts,tsx ",
    "w:lint:prettier": "prettier --check packages/**/src/**/*.{ts,tsx}",
    "fix:eslint": "eslint --fix sample packages/**/src --ext ts,tsx -c ./.eslintrc.js",
    "fix:prettier": "prettier --write sample/src/**.{ts,tsx} packages/**/src/**/*.{ts,tsx}"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "del-cli": "^4.0.1",
    "esbuild": "^0.14.11",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "lerna": "^4.0.0",
    "metro-minify-esbuild": "^0.1.0",
    "prettier": "^2.5.1",
    "react-native-builder-bob": "^0.18.2",
    "react-native-monorepo-tools": "^1.1.4",
    "typescript": "^4.5.4"
  },
  "dependencies": {}
}
