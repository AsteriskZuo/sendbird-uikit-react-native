{
  "repository": "git@github.com:sendbird/sendbird-uikit-react-native.git",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "sample"
    ],
    "nohoist": [
      "**/react",
      "**/react-dom",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-dev-menu",
      "**/react-native-codegen"
    ]
  },
  "scripts": {
    "w": "sh -c 'yarn workspace ${0} ${1} ${2} ${3}'",
    "w:create": "npx create-react-native-library",
    "w:clean": "lerna run clean",
    "w:build": "lerna run prepare",
    "w:test": "lerna run test",
    "lerna:remove": "sh -c 'lerna exec \"yarn remove ${0}\" ${1}'",
    "test": "jest",
    "reset": "find . -type dir -name node_modules | xargs rm -rf",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "lint:eslint": "eslint sample packages/**/src --ext ts,tsx -c ./.eslintrc.js",
    "lint:prettier": "prettier --check sample/src/**.{ts,tsx} packages/**/src/**/*.{ts,tsx}",
    "fix:eslint": "eslint --fix sample packages/**/src --ext ts,tsx -c ./.eslintrc.js",
    "fix:prettier": "prettier --write sample/src/**.{ts,tsx} packages/**/src/**/*.{ts,tsx}"
  },
  "devDependencies": {
    "@testing-library/react-native": "^9.0.0",
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "babel-jest": "^27.4.6",
    "del-cli": "^4.0.1",
    "esbuild": "^0.14.11",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "metro-minify-esbuild": "^0.1.0",
    "metro-react-native-babel-preset": "^0.66.2",
    "prettier": "^2.5.1",
    "react": "16.x",
    "react-native": "0.63.x",
    "react-native-builder-bob": "^0.18.2",
    "react-native-monorepo-tools": "^1.1.4",
    "react-test-renderer": "^17.0.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {},
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "/__tests__/.*\\.(test|spec)\\.(js|tsx?)$",
    "moduleNameMapper": {
      "@sendbird/([^/]+)": "<rootDir>/packages/$1/src"
    },
    "preset": "react-native"
  }
}
