{
  "extends": "../tsconfig.json",
  "references": [
    {
      "path": "../packages/chat-react-hooks"
    },
    {
      "path": "../packages/uikit-react-native"
    },
    {
      "path": "../packages/uikit-react-native-core"
    }
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": false,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "resolveJsonModule": true
  },
  "exclude": [
    "../packages/*/lib",
    "@sendbird/*/lib",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
